{
    "layer": "top",
    "height": 4,
    "spacing": 10,
    "margin-top": 0,
    "margin-bottom": 0,

    // Modules Left
    "modules-left": [
	"clock",
	"hyprland/window"
    ],

    // Modules Center
    "modules-center": [
        "hyprland/workspaces"
    ],

    // Modules Right
    "modules-right": [
	"group/utils",
	"group/laptop",
	"battery",
	"group/hardware",
	"group/power"
    ],


    // Hardware Group
    "group/hardware": {
	"orientation": "inherit",

	"modules": [
		"cpu",
		"memory",
		"disk"
	]
    },


    // Laptop Specific Module Group
    "group/laptop": {
	"orientation": "inherit",

	"modules": [
		"network",
		"bluetooth"
	]
    },


    // Power Group
    "group/power": {
	"orientation": "inherit",
	
	"drawer": {
        	"transition-duration": 500,
        	"children-class": "not-power",
        	"transition-left-to-right": false
    	},
	
	"modules": [
		"custom/power",
		"custom/lock",
		"custom/reboot"
	]
    },


    // Utilities Group
    "group/utils": {
    	"orientation": "inherit",

	"modules": [
		"wireplumber",
		"backlight"
	]
    },



    	// Modules -> group/power

    	"custom/power": {
	    "format": "  ",
	    "tooltip": false,
	    "on-click": "shutdown now"
	},
	
	"custom/lock": {
            "format": "  ",
	    "tooltip": false,
	    "on-click": "hyprlock"
	},

	"custom/reboot": {
	    "format": "  ",
	    "tooltip": false,
	    "on-click": "shutdown -r now"
	},

	// Modules -> group/hardware
	"cpu": {
	    "format": "{icon} {usage}%",
	    "format-icons": [""]
	},

	"memory": {
	    "format": "|    {icon} {used}/{total}",
	    "format-icons": [""]
	},

	"disk": {
	    "format": "|     {used}"
	},


	// Modules -> group/laptop
	"battery": {
	    "interval": 60,
	    "states": {
		"charging": 100,
		"warning": 30,
		"critical": 15
	    },
	    "format": "{icon} {capacity}%",
	    "format-icons": ["", "", "", ""]
	},

	"bluetooth": {

	},

	"wifi": {

	},


	// Modules -> group/utils
	"wireplumber": {

	},

	"backlight": {

	},


	// Modules -> center
	"hyprland/workspaces": {

	},


	// Modules -> left
	"clock": {

	},

	"hyprland/window": {
		"format": "{}",
		"rewrite": {
		    "(.*) - Mozilla Firefox": "> [$2] {initialTitle}",
		    "(.*) - Alacritty": "> Terminal",
		    "(.*) - Neovim": ">_ [$1]"
		},
		"seperate-outputs": true
	}
}
